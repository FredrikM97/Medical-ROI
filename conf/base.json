{
    "visualise":{
        "data":{
            "root":"data/",
            "images_raw":"adni_raw/",
            "images_processed":"SPM_preprocessed_normalized/ADNI1/",
            "images_category":"SPM_categorised/ADNI1/",
            "images_meta":"meta/",
            "delimiter":"_",
            "classes":{
                "CN":0,
                "MCI":1,
                "AD":2
            }
        },
        "meta":{
            "filename_raw":[
                "projectIdentifier", 
                "subject.subjectIdentifier",
                "subject.study.series.modality",
                "subject.study.imagingProtocol.description",
                "subject.study.series.dateAcquiredPrecise", 
                "image_nbr",
                "series",
                "subject.study.imagingProtocol.imageUID",
                "filename",
                "path"
            ],
            "filename_category":[
                "subject.researchGroup",
                "subject.subjectIdentifier",
                "subject.study.imagingProtocol.imageUID",
                "image_nbr",
                "filename",
                "path"
            ],
            "filename_processed":[
                "projectIdentifier", 
                "subject.subjectIdentifier",
                "subject.study.series.modality",
                "subject.study.imagingProtocol.description",
                "subject.study.series.dateAcquiredPrecise", 
                "image_nbr",
                "series",
                "subject.study.imagingProtocol.imageUID",
                "filename",
                "path"
            ]
        }
    },
    "neural_network":{
        "name": "NiftiModel",
        "n_gpu": 1,
        "seed":420,
        "dataloader": {
            "type": "AdniDataLoader",
            "args":{
                "data_dir": "data/",
                "batch_size": 6,
                "validation_split": 0.1,
                "num_workers": 6,
                "pin_memory": true,
                "img_shape":[95,79],
            }
        },
        "model":{
            "loss": "CrossEntropyLoss",
            "optimizer":{
                "type": "Adam",
                "args":{
                    "lr": 0.0002,
                    "weight_decay": 1e-5,
                    "amsgrad": true
                }
            },
            "architecture": {
                "type": "resnet50",
                "args": {}
            },
            "hp_metrics":[
                "loss",
                "loss",
                "accuracy",
                "auc",
                "specificity",
                "sensitivity"
            ]
        }, 
        "trainer":{
            "max_epochs": 100,
            "tensorboard": true,
            "precision":16,
            "profiler":true,
            "enable_checkpoints": false,
            "num_sanity_val_steps":2,
            "save_dir": "saved/",
        }
    }
}