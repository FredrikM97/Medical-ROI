{
    "ligtning":{
        "dataset_params":{
            "dataset_name": "lightning",
            "dataset_path": "../data/SPM_categorised",
            "input_size":[79, 95, 79],
            "num_classes":3,
            "input_channels":1,
        
            "train_params": {
                "batch_size": 2,
                "shuffle": true,
                "num_workers": 4,
                "pin_memory": true,
                "preprocess": ["pad"]
            },
            "val_params": {
                "batch_size": 2,
                "shuffle": false,
                "num_workers": 4,
                "pin_memory": true,
                "preprocess": ["pad"]
            }
        },
        
        "model_params": {
            "model_name": "lightning",
            "is_train": true,
            "max_epochs": 40,
            "lr": 0.01,
            "export_path": "",
            "checkpoint_path": "logs/",
            "load_checkpoint": -1,
            "lr_policy": "step",
            "lr_decay_iters": 10
        },
        "visualization_params": {
            "name": "3d ligtning"
        },
        "printout_freq": 10,
        "model_update_freq": 1,
        "log_path":"logs/",
        "gpus":1,
        "reload_dataloaders_every_epoch":true,
        "progress_bar_refresh_rate":50
    }
}