{
    "vgg16_bn":{
        "dataset_params":{
            "dataset_name": "lightning",
            "dataset_path": "../data/SPM_categorised/AIH",
            "fold_splits":10,
            "train_params": {
                "batch_size": 6,
                "shuffle": true,
                "num_workers": 6,
                "pin_memory": true
            },
            "val_params": {
                "batch_size": 6,
                "shuffle": false,
                "num_workers": 6,
                "pin_memory": true
            }
        },
        
        "model_params": {
            "model_name": "lightning",
            "architecture":"vgg16_bn",
            "is_train": true,
            "max_epochs": 2000,
            "lr": 0.0002,
            "load_checkpoint": -1,
            "lr_policy": "step",
            "lr_decay_iters": 10,
            "opt_weight_decay":1e-5,
            "loss_weight_balance":true,
            "opt_amsgrad":false
        },
        "agent":{
            "seed":420,
            "kfold":false
        },
        "visualization_params": {
            "name": "3d ligtning"
        },
        "logs":{
            "checkpoint": "../logs/checkpoints/",
            "tensorboard":"../logs/tb_logs/"
        },      
        "trainer_gpus":1,
        "trainer_num_sanity_val_steps":2,
        "trainer_reload_dataloaders_every_epoch":false,
        "trainer_progress_bar_refresh_rate":50,
        "trainer_precision":16,
        "trainer_profiler":true
    }
}