            "train_params": {
                "batch_size": 6,
                "shuffle": true,
                "num_workers": 6,
                "pin_memory": true
            },
            "val_params": {
                "batch_size": 6,
                "shuffle": false,
                "num_workers": 6,
                "pin_memory": true
            }
        },
        
        "model_params": {
            "model_name": "lightning",
